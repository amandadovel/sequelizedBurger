<div class="container">
  <div class="row flex-row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Ready to Eat</h5>
          <ol>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ol>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Already Eaten</h5>
          <ol>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
    <div class="card add-burger">
      <div class="card-body">
        <h5 class="card-title">Add a Burger</h5>
        <form class="create-form form-style">
          <div class="form-group">
            <label for="ca">Burger Name</label>
            <input type="text" id="ca" name="name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>
